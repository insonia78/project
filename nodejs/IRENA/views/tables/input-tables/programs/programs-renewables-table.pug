table(class='programs-renewables-table inline')
  thead
    tr
      th(colspan="3" style='width:10%' class='table-header table-header-text') Renewables
    tr
      th(class='table-header-field table-header-field-title') Source
      |
      th(class ='table-header-field table-header-field-title') Minimum capacity Year 1 (MW)
      |
      th(class ='table-header-field table-header-field-title') Minimum capacity Year 2 (MW)

  tbody  
    tr
      th(class ='table-items-description table-items-description-text') Wind
      |
      td(class ='table-items-description-content') 
        input.grid-layout-textboxes.form-control#windcappol1(type='text' name='windcappol1')
      |
      td(class ='table-items-description-content')
        input.grid-layout-textboxes.form-control#windcappol2(type='text' name='windcappol2')

    tr
      th(class ='table-items-description table-items-description-text') Solar
      |
      td(class ='table-items-description-content') 
        input.grid-layout-textboxes.form-control#solarcappol1(type='text' name='solarcappol1')
      |
      td(class ='table-items-description-content')
        input.grid-layout-textboxes.form-control#solarcappol2(type='text' name='solarcappol2')
