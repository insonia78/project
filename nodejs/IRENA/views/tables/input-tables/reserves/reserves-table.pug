table(id='reserves-table' class='reserves-table inline')
  thead
    tr
      th(colspan="3" class='table-header table-header-text') - RESERVES -
    tr
      th(class ='table-header-field table-header-field-title')
      |
      th(class ='table-header-field table-header-field-title') Provision (MW)
      |
      th(class ='table-header-field table-header-field-title') Duration (min)   

  tbody    
    tr
      th(class ='table-items-description table-items-description-text') Primary Reserves
      |          
      td(class ='table-items-description-content')
        input.grid-layout-textboxes.form-control#p_reserves(type='text' name='p_reserves' value='450')
      |          
      td(class ='table-items-description-content')
        input.grid-layout-textboxes.form-control(type='text' disabled, placeholder="15")
    tr
      th(class ='table-items-description table-items-description-text') Secondary Reserves
      |          
      td(class ='table-items-description-content')
        input.grid-layout-textboxes.form-control#s_reserves(type='text' name='s_reserves' value='450')
      |          
      td(class ='table-items-description-content')
        input.grid-layout-textboxes.form-control(type='text' disabled, placeholder="15")
    tr
      th(class ='table-items-description table-items-description-text') Tertiary Reserves
      |          
      td(class ='table-items-description-content')
        input.grid-layout-textboxes.form-control#t_reserves(type='text' name='t_reserves' value='1200')
      |          
      td(class ='table-items-description-content')
        input.grid-layout-textboxes.form-control(type='text' disabled, placeholder="15")          

